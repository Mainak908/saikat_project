{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"] // Ensure Node.js types are included
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
